/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run nf-core/mofapipeline -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

process {
    resourceLimits = [
        cpus: 4,
        memory: '15.GB',
        time: '1.h'
    ]
}

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    drugs_data  = "C:\Users\faria\OneDrive\Documentos\mofapipeline\test_mofa\drugs_data.csv"
    meth_data = "C:\Users\faria\OneDrive\Documentos\mofapipeline\test_mofa\meth_data.csv"
    mRNA_data = "C:\Users\faria\OneDrive\Documentos\mofapipeline\test_mofa\mRNA_data.csv"
    muta_data = "C:\Users\faria\OneDrive\Documentos\mofapipeline\test_mofa\muta_data.csv"
}
